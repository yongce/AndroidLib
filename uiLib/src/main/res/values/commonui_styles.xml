<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.CommonUiTheme" parent="@android:style/Widget" />
    <style name="Widget.CommonUiTheme.Light" />

    <style name="Widget.CommonUiTheme.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">?attr/commonuiDividerMargin</item>
        <item name="android:layout_marginBottom">?attr/commonuiDividerMargin</item>
        <item name="android:background">?attr/commonuiDividerColor</item>
    </style>

    <style name="Widget.CommonUiTheme.ActivityMargin">
        <item name="android:paddingStart">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingEnd">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingTop">?attr/commonuiActivityVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiActivityVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.ScrollView">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.CommonUiTheme.GridEntriesItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/commonuiGridEntriesItemHeight</item>
        <item name="android:background">?attr/commonuiGridEntriesItemBkg</item>
        <item name="android:textAppearance">?attr/commonuiGridEntriesItemTextAppearance</item>
    </style>

    <style name="Widget.CommonUiTheme.ListViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?attr/commonuiListItemVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiListItemVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.RecyclerView">
        <item name="android:paddingStart">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingEnd">?attr/commonuiActivityHorizontalMargin</item>
        <item name="android:paddingTop">?attr/commonuiActivityVerticalMargin</item>
        <item name="android:paddingBottom">?attr/commonuiActivityVerticalMargin</item>
    </style>

    <style name="Widget.CommonUiTheme.RecyclerView.FastScroll">
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/commonui_scrollbar_track</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/commonui_scrollbar_thumb</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/commonui_scrollbar_track</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/commonui_scrollbar_thumb</item>
    </style>
</resources>